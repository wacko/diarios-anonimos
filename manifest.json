{
  "manifest_version": 2,

  "name": "Diarios anónimos: Clarín, La Nación y Olé",
  "short_name": "diarios-anonimos",

  "description": "Evita tener que registrarte para leer los diarios Clarín, Cronista, La Nación y Olé.",
  "version": "0.0.10",
  "author": "Joaquín Vicente",
  "homepage_url": "https://github.com/wacko/diarios-anonimos",

  "icons": {
    "128": "images/icon-128x128.png",
    "48": "images/icon-48x48.png"
  },

  "content_scripts": [{
    "js": ["clarin.js"],
    "css": ["clarin.css"],
    "matches": ["*://*.clarin.com/*"],
    "run_at": "document_end"
  }, {
    "js": ["lanacion.js"],
    "css": ["lanacion.css"],
    "matches": ["*://*.lanacion.com.ar/*"],
    "run_at": "document_end"
  }, {
    "js": ["cronista.js"],
    "matches": ["*://*.cronista.com/*"],
    "run_at": "document_end"
  }, {
    "js": ["ole.js"],
    "css": ["ole.css"],
    "matches": ["*://*.ole.com.ar/*"],
    "run_at": "document_end"
  }, {
    "js": ["eldia.js"],
    "matches": ["*://*.eldia.com/*"],
    "run_at": "document_end"
  }]
}
